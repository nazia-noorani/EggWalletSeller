<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nazianoorani.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="20sp"
        android:id="@+id/textViewTitle"
        android:layout_marginTop="41dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:theme="@style/ButtonTheme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/app_1"
        android:id="@+id/buttonApp1"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textViewTitle"
        android:layout_centerHorizontal="true" />

    <Button
        android:theme="@style/ButtonTheme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/app_2"
        android:id="@+id/buttonApp2"
        android:layout_below="@+id/buttonApp1"
        android:layout_alignLeft="@+id/buttonApp3"
        android:layout_alignStart="@+id/buttonApp3" />

    <Button
        android:theme="@style/ButtonTheme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/app_3"
        android:id="@+id/buttonApp3"
        android:layout_below="@+id/buttonApp2"
        android:layout_centerHorizontal="true" />

    <Button
        android:theme="@style/ButtonTheme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/app_4"
        android:id="@+id/buttonApp4"
        android:layout_below="@+id/buttonApp3"
        android:layout_centerHorizontal="true" />

    <Button
        android:theme="@style/ButtonTheme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/app_5"
        android:id="@+id/buttonApp5"
        android:layout_below="@+id/buttonApp4"
        android:layout_alignLeft="@+id/buttonApp4"
        android:layout_alignStart="@+id/buttonApp4" />

    <Button
        android:theme="@style/ButtonTheme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/app_6"
        android:id="@+id/buttonApp6"
        android:layout_below="@+id/buttonApp5"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
