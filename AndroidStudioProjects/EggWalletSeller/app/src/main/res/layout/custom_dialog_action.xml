<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <com.neopixl.pixlui.components.textview.TextView
        android:id="@+id/txtDialogMessageTitle"
        style="@style/AppTheme.StyledText.Bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:background="@color/dialog_header_bg"
        android:gravity="center"
        android:padding="12dp"
        android:text="AAA"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black_steel"
        android:textStyle="bold" />

    <View
        android:id="@+id/viewLineCustomDialogMessage"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txtDialogMessageTitle"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/black_steel" />

    <com.neopixl.pixlui.components.textview.TextView
        android:id="@+id/txtDialogMessageMessage"
        style="@style/AppTheme.StyledText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewLineCustomDialogMessage"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:text="AAA"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black_steel"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txtDialogMessageMessage"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnDismissDialogMessage"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@drawable/abc_alpha_dialog_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <Button
            android:id="@+id/btnDialogAction"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@drawable/abc_alpha_dialog_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="What Ok"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
